{
  "name": "l1-chat",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "lib/*"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.1.2"
  },
  "scripts": {
    "dev:web": "cd apps/web && bun run dev",
    "dev:server": "cd apps/server && bun run dev",
    "dev:auth": "cd apps/auth && bun run dev",
    "dev": "conc \"npm:dev:web\" \"npm:dev:server\" \"npm:dev:auth\"",
    "dev:au": "conc \"npm:dev:web\" \"npm:dev:auth\""
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
